<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, user-scalable=no">
        {% block styles %}
            <link rel="stylesheet" href="/dist/css/main.min.css">
        {% endblock %}
        <title>{{ title|default('Good Night') }}</title>
    </head>
    <body>
        {% block body %}
            <div class="wrapper">
                {% include '../blocks/header/header-block.twig' %}

                <div class="main">
                    {% block main %}
                        <div class="container">
                            {% block breadcrumbs %}
                                {% include '../blocks/breadcrumbs.twig' %}
                            {% endblock %}
                            
                            {% block page_header %}
                                <div class="page-header">
                                    {% block page_header_h1 %}
                                        <h1>{% block page_header_title %}{% endblock %}</h1> 
                                    {% endblock %}
                                </div>
                            {% endblock %}
                            
                            {% block before_content %}{% endblock %}

                            {% block content %}
                                <div class="main-content">
                                    {% block main_content %}
                                        
                                    {% endblock %}
                                </div>
                            {% endblock %}

                            {% block after_content %}
                                
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>

            {% block footer %}
                {% include '../blocks/footer/footer-block.twig' %}
            {% endblock %}

            {% block javascripts %}
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
                <script src="/dist/js/main.js"></script>
                
                <script>
                    // Picture element HTML5 shiv
                    document.createElement("picture");
                </script>
                <script src="/dist/js/picturefill.min.js" async></script>
                <!--[if IE 9]>
                <script src="/dist/js/flexibility.js"></script>
                <script>
                    flexibility(document.documentElement);
                </script>
                <![endif]-->
            {% endblock %}
        {% endblock %}
    </body>
</html>